{
  "name": "farm-management-system",
  "version": "1.0.0",
  "description": "Full-stack farm management system with React frontend and Node.js backend",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd egg-farm && npm run dev",
    "dev:backend": "cd farm-backend && npm run dev",
    "install:all": "npm install && cd egg-farm && npm install && cd ../farm-backend && npm install",
    "build": "cd egg-farm && npm run build",
    "start": "cd farm-backend && npm start",
    "setup": "npm run install:all && cd farm-backend && npm run setup",
    "db:init": "cd farm-backend && npm run db:init",
    "db:seed": "cd farm-backend && npm run db:seed",
    "db:status": "cd farm-backend && npm run db:status"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6"
  },
  "engines": {
    "node": ">=20"
  }
}
